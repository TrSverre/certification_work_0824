pipeline {
  agent any


  stages {
    stage('get actual repo git') {
      steps {
        script {
            if (fileExists('/var/lib/jenkins/certification_work_0824')) {
                sh 'cd /var/lib/jenkins/certification_work_0824/ && git pull'
            }    
            else{
                sh 'cd /var/lib/jenkins/ && git clone https://github.com/TrSverre/certification_work_0824.git'    
            }
        }
      }
    }
    stage('Terraform init and appluy') {
      steps {
        sh 'cd /var/lib/jenkins/certification_work_0824 &&  export YC_CLOUD_ID=$(yc config get cloud-id) && export YC_FOLDER_ID=$(yc config get folder-id) 
        && export YC_TOKEN=$(yc iam create-token) && terraform init && terraform apply -auto-approve'
      }
    }
  }
}